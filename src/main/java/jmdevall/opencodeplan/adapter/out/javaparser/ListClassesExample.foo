package jmdevall.opencodeplan.adapter.out.javaparser;

import com.github.javaparser.JavaParser;
import com.github.javaparser.ParseException;
import com.github.javaparser.ast.body.ClassOrInterfaceDeclaration;
import com.github.javaparser.ast.visitor.VoidVisitorAdapter;

import jmdevall.opencodeplan.adapter.out.file.direxplorer.DirExplorer;

import java.io.File;
import java.io.IOException;

public class ListClassesExample {

    public static void listClasses(File rootDir) {
        new DirExplorer(
                (level, path, file) -> path.endsWith(".java"),
                (level, path, file) -> {
                    System.out.println(path);
                    System.out.println(strLineOfSize(path.length()));
                    try {

                        new Vvisitor().visit(JavaParser.parse(file), null);

                        /*
                        new VoidVisitorAdapter<Object>() {
                            @Override
                            public void visit(ClassOrInterfaceDeclaration n, Object arg) {
                                super.visit(n, arg);
                                System.out.println(" * " + n.getName());
                            }
                        }.visit(JavaParser.parse(file), 
                        null);
                        */
                        System.out.println(); // empty line
                    } catch (IOException e) {
                        new RuntimeException(e);
                    }
                }).explore(rootDir);
    }

    public static class Vvisitor extends VoidVisitorAdapter {
        @Override
        public void visit(ClassOrInterfaceDeclaration n, Object arg) {
            super.visit(n, arg);
            System.out.println(" * " + n.getName());
        }
    }

    public static void main(String[] args) {
        File projectDir = new File("/home/vicuna/js/opencodeplan/src/main/java");
        listClasses(projectDir);
    }

    private static String strLineOfSize(int size) {
        return new String(new char[10]).replace('\0', '=');
    }
}
